<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activityContainer"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include layout="@layout/transparent_toolbar"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_50_alpha"
            android:padding="16dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/background_color_shape"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:text="@string/interactive_info"
                    android:padding="16dp"
                    />
                
                <TextView
                    android:id="@+id/bordersTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:padding="16dp"
                    android:text="@string/borders"
                    />

                <TextView
                    android:id="@+id/regionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:padding="16dp"
                    tools:text="Europe"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="left"
                        android:background="@drawable/background_transparent_shape"
                        android:padding="16dp"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:gravity="center"
                            android:textSize="24sp"
                            android:text="@string/main_info"
                            android:padding="16sp"
                            />

                        <TextView
                            android:id="@+id/nativeNameTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            tools:text="EspaÃ±a"
                            />

                        <TextView
                            android:id="@+id/capitalTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            tools:text="Madrid"
                            />

                        <TextView
                            android:id="@+id/populationTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            tools:text="12312"
                            />

                        <TextView
                            android:id="@+id/latLongTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            tools:text="12312"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="right"
                        android:background="@drawable/background_transparent_shape"
                        android:padding="16dp"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:gravity="center"
                            android:textSize="24sp"
                            android:text="@string/extra_info"
                            android:padding="16sp"
                            />

                        <TextView
                            android:id="@+id/relevanceTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            tools:text="12312"
                            />


                        <TextView
                            android:id="@+id/demonymTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            tools:text="12312"
                            />

                        <TextView
                            android:id="@+id/areaTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            tools:text="12312"
                            />

                        <TextView
                            android:id="@+id/giniTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            tools:text="12312"
                            />

                        <TextView
                            android:id="@+id/alpha2CodeTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            tools:text="EE"
                            />

                        <TextView
                            android:id="@+id/alpha3CodeTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            tools:text="EEE"
                            />

                        <TextView
                            android:id="@+id/subRegionTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:gravity="right"
                            tools:text="Europeaaaaaaaaaaaaaaaaaaaaaaaa"
                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>